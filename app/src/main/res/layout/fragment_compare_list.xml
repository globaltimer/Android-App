<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="compareLocale"
            type="honkot.gscheduler.model.ListBindingInterface" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#f6f6f6"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.22">

                <ImageView
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageView3"
                    android:layout_gravity="bottom"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/basisCityNameTextView"
                    android:textColor="#379dca"
                    android:textSize="25sp"
                    android:gravity="bottom"
                    android:text="@{compareLocale.getDisplayCity()}"
                    tools:text="Tokyo"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_height="38dp"
                android:background="@android:color/background_light"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.13">

                <ImageButton
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/editDateButton"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/basisDateTextView"
                    android:textAlignment="center"
                    android:background="#00000000"
                    android:textColorHint="#379dca"
                    android:textColor="#379dca"
                    tools:text="2017/03/01"
                    android:text="@{compareLocale.getDisplayDate()}"
                    android:layout_alignTop="@+id/editDateButton"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/background_light"
                android:layout_weight="0.11"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <ImageButton
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/editTimeButton"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="21dp"
                    android:layout_height="21dp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="35sp"
                    android:id="@+id/basisTimeTextView"
                    android:textAlignment="center"
                    android:textColorHint="#379dca"
                    android:textColor="#379dca"
                    android:background="#00000000"
                    android:gravity="bottom"
                    android:layout_width="200dp"
                    tools:text="15:18"
                    android:text="@{compareLocale.getDisplayTime()}"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/futureMsgTextView"
                android:textAlignment="center"
                android:layout_weight="0.27"
                android:layout_margin="10dp"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/shiftLeftButton"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="@string/leftArrow"/>
                <TextView
                    android:id="@+id/basisPreviousTimeTextView"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    tools:text="14:48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/basisCurrentTimeTextView"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    tools:text="15:18"
                    android:text="@{compareLocale.getDisplayTime()}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/basisNextTimeTextView"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    tools:text="15:48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/shiftRightButton"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="@string/rightArrow"/>
            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerView" />
    </LinearLayout>
</layout>

